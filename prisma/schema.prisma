generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth", "public"]
}

model subscription {
  id           String    @id @default(uuid())
  name         String
  amount       Int
  currency     Currency
  frequency    Frequency
  category     Category
  shouldNotify Boolean
  startDate    DateTime
  endDate      DateTime?
  note         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@schema("public")
}

enum Frequency {
  ONE_TIME
  DAILY
  WEEKLY
  MONTHLY
  ANNUALLY

  @@schema("public")
}

enum Category {
  FOOD
  TRANSPORTATION
  SHOPPING
  ENTERTAINMENT
  BILLS
  HEALTH
  LEARNING
  INVESTMENT
  INSURANCE
  RENTAL
  TAXES
  CHARITY
  GIFT
  FAMILY
  TRAVEL
  OTHER

  @@schema("public")
}

enum Currency {
  USD
  JPY
  TWD

  @@schema("public")
}
